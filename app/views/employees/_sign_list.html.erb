<h1>Listing signs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Check in</th>
      <th>Check out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% signs.each do |sign| %>
      <tr>
        <td><%= sign.date %></td>
        <td><%= sign.check_in.strftime("%I:%M %p") %></td>
        <td><%= sign.check_out.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Show', sign %></td>
        <td><%= link_to 'Edit', edit_sign_path(employee.sign.last) %></td>
        <td><%= link_to 'Destroy', sign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sign', new_sign_path %>

<h1>Employees working hours for the period from <%= @from%> to <%= @to%></h1>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Working hours</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <%x = employee.working_hours( Date.parse(params["locals"]["from"]), Date.parse(params["locals"]["to"]))%>
        <td><%= x[0]  %></td>
        <td><%= x[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

